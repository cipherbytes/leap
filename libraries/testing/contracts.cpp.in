#include <contracts.hpp>

#include <cstdint>
#include <vector>

#define INCBIN_STYLE INCBIN_STYLE_SNAKE
#include <fc/io/incbin.h>

#define MAKE_EMBEDDED_WASM_ABI(CN,C, D)                                                                                                                                       \
INCBIN(gax_testing_contract_ ## CN ## _wasm, "${CMAKE_BINARY_DIR}/libraries/testing/" #D "/" #C "/" #C ".wasm");                                                            \
INCTXT(gax_testing_contract_ ## CN ## _abi,  "${CMAKE_BINARY_DIR}/libraries/testing/" #D "/" #C "/" #C ".abi");                                                             \
                                                                                                                                                                              \
namespace eosio::testing {                                                                                                                                                    \
   std::vector<std::uint8_t> contracts:: CN ## _wasm() {                                                                                                                      \
      return std::vector<std::uint8_t>(ggax_testing_contract_ ## CN ## _wasm_data, ggax_testing_contract_ ## CN ## _wasm_data + ggax_testing_contract_ ## CN ## _wasm_size); \
   }                                                                                                                                                                          \
   std::vector<char> contracts:: CN ## _abi() {                                                                                                                               \
      return std::vector<char>(ggax_testing_contract_ ## CN ## _abi_data, ggax_testing_contract_ ## CN ## _abi_data + ggax_testing_contract_ ## CN ## _abi_size);       \
   }                                                                                                                                                                          \
}

MAKE_EMBEDDED_WASM_ABI(eosio_bios,                             eosio.bios, contracts)
MAKE_EMBEDDED_WASM_ABI(before_producer_authority_eosio_bios,   eosio.bios, contracts/old_versions/v1.7.0-develop-preactivate_feature)
MAKE_EMBEDDED_WASM_ABI(before_preactivate_eosio_bios,          eosio.bios, contracts/old_versions/v1.6.0-rc3)
